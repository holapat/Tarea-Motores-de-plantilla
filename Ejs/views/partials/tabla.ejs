<% if(productos.length !== 0) { %>
<div class="table-responsive">
    <table class="table table-dark">
        <tr style="color: darkorange;">
            <th>Nombre</th> 
            <th>Precio</th>
            <th>Imagen</th> 
        </tr>
        <% for (const indice in productos) { %>
        <tr>
            <td> <%= productos[indice].name %></td>
            <td> $<%= productos[indice].price %></td>
            <td> <img src="<%= productos[indice].img %>" alt="" width="30px"></td>
        </tr>
        <% } %>
    </table>
</div>
<% } else { %>
    <table class="table table-dark">
    <div class="container mt-3">
        <h3 style="color: rgb(59, 58, 3); background-color: rgba(226, 226, 142, 0.973);">No se encontraron productos</h3>
    </div>
<% } %>